extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main 
  h1(class="mb-4") Chinh sua danh muc san pham 


  +alert-error(5000)

  form(
    action=`${prefixAdmin}/products-category/edit/${data.id}?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="title") Tieu de 
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
        value=data.title
      )
    div(class="form-group")
      label(for="parent_id") Danh muc cha 
    select(
      name="parent_id"
      id="parent_id"
      class="form-control"
    )
      option(value="") -- Chon danh muc cha --
      if(records) 
        +select-tree(records, 1, data.parent_id)

    div(class="form-group")
      lable(for="desc") Mo ta 
      textarea(
        type="text"
        class="form-control textarea-mce"
        id="desc"
        name="description"
        rows="5"
        textarea-mce
      ) #{data.description}
    div(
      class="form-group"
      upload-image 
    )
      label(for="thumbnail") Anh 
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      img(
        src=data.thumbnail
        class="image-preview"
      )
    div(class="form-group")
      label(for="position") Vi tri 
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tu dong tang"
        min="1"
        value=data.position
      )
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked=(data.status == "active" ? true : false)
      )
      label(for="statusActive" class="form-check-label") Hoat dong
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="inactive"
        checked=(data.status == "inactive" ? true : false)
      )
      label(for="statusActive" class="form-check-label") Dung hoat dong
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cap nhat
